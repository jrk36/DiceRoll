#importing random number library
import random

#asking how many times to roll the die
numberOfRollsInput = input('How many times do you want to roll? ')

#asking how many sides are on the die
sidesOnDieInput = input('How many sides is your die? ')

#converting numberOfRollsInput from string to integer
numberOfRollsInteger = int(numberOfRollsInput) 

#converting sidesOnDieInput from string to integer
sidesOnDieInteger = int(sidesOnDieInput)

#using numberOfRollsInteger as range for how many times to roll the die
for rolls in range(numberOfRollsInteger):

        #setting sidesOnDieInteger for the random number range
        #adding 1 to that because python considers 0 the first number and 0 is not on a die
        randomDieRoll = random.randrange(sidesOnDieInteger) + 1

        #shows die roll result on screen
        print('Your roll is:')
        print(randomDieRoll)

        #checks if 20-sided die is being used
        if sidesOnDieInteger == 20:

            #if 20-sided die is used, checks if die roll result is 20
            if randomDieRoll == 20:

                #shows 'Critical Hit!' on screen if 20-sided die is used and die roll result is 20
                print('Critical Hit!')

            #if 20-sided die is used, checks if die roll result is 1
            elif randomDieRoll == 1:

                #shows 'Critical Miss!' on screen if 20-sided die is used and die roll result is 1
                print('Critical Miss!')

